	fi
}

function SELECT_MIRRORS_tag()   { echo "Run mirrorselect"; }
function SELECT_MIRRORS_label() { on_off_label "$SELECT_MIRRORS"; }
function SELECT_MIRRORS_show()  { return 0; }
